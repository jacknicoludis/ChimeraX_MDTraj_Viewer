<!--
ChimeraX bundle names must start with "ChimeraX-"
to avoid clashes with package names in pypi.python.org.
When uploaded to the ChimeraX toolshed, the bundle
will be displayed without the ChimeraX- prefix.
-->

<BundleInfo name="MDTrajViewer"
        version="1.0" package="chimerax.mdtrajviewerv"
        minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>Jack Nicoludis</Author>
  <Email>jacknicoludis@gmail.com</Email>
  <URL>www.invitae.com</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>A UI tool for loading and viewing trajectories using mdtraj to load</Synopsis>
  <Description>
      Loads trajectory files for people to view.
      Generally used for loading molecular dynamics simulations to be viewed within ChimeraX.
  </Description>

  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="MolecularDynamics"/>
    <Category name="MD"/>
    <Category name="Visualization"/>
  </Categories>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.1"/>
    <Dependency name="mdtraj"/>
  </Dependencies>

  <!-- Python and ChimeraX-specific classifiers
       From https://pypi.python.org/pypi?%3Aaction=list_classifiers
       Some Python classifiers are always inserted by the build process.
       These include the Environment and Operating System classifiers
       as well as:
         Framework :: ChimeraX
         Intended Audience :: Science/Research
         Programming Language :: Python :: 3
         Topic :: Scientific/Engineering :: Visualization
         Topic :: Scientific/Engineering :: Chemistry
         Topic :: Scientific/Engineering :: Bio-Informatics
       The "ChimeraX :: Bundle" classifier is also supplied automatically.  -->
  
  <DataFiles>
      <DataFile>dynamics.html</DataFile>
  </DataFiles>
  
  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 3 - Alpha</PythonClassifier>
    <PythonClassifier>License :: Freeware</PythonClassifier>
    
    <!-- This creates the tool for use in ChimeraX -->
    <!-- ChimeraX :: Tool :: <Name> :: General :: <Description> -->
    <ChimeraXClassifier>ChimeraX :: Tool :: MDTraj Viewer :: General :: Shows a UI to display Molecular
      Dynamics </ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
